<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prisijungti" />

            <Button
                android:id="@+id/ReceiptsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apsipirkimai" />

            <Button
                android:id="@+id/ProductsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Produktai" />

            <Button
                android:id="@+id/PurchaseAnalysisButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pirkinių analizė" />

            <Button
                android:id="@+id/RegisterProductsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Užregistruoti produktus" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>